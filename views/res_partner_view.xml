<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="abvo_res_partner_form">
        <field name="name">abvo.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <field name="vat" position="replace"/>
            <xpath expr="//h1" position="after">
                <group attrs="{'invisible':[('is_boat', '!=', True)]}">
                    <field name="estaleiro"/>
                    <field name="modelo"/>
                    <field name="loa"/>
                    <field name="deslocamento"/>
                    <field name="numeral"/>
                    <field name="clube"/>
                </group>
            </xpath>

            <xpath expr="//page[last()]" position="after">
                <page string="Certificados" name="certificates" attrs="{'invisible':[('is_boat', '!=', True)]}">
                    <group name="certificates">
                        <field name="is_boat" invisible="0"/>
                        <field name="certificates_lines" attrs="{'readonly':False}" nolabel="1">
                            <form string="Hitos">
                              <field name="date"/>
                              <field name="certificate_type"/>
                              <field name="raiting"/>
                              <field name="loa"/>
                              <field name="invoice_id"/>
                              <field name="pdf"/>
                            </form>
                            <tree string="Hitos" editable="bottom">
                              <field name="date"/>
                              <field name="certificate_type"/>
                              <field name="raiting"/>
                              <field name="loa"/>
                              <field name="invoice_id"/>
                              <field name="pdf"/>
                            </tree>  
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
