    <template id="website_partner_detail_inherited" inherit_id="website_partner.partner_detail">
        <xpath expr="//div[@t-field='partner.website_description']" position="before">
            <t t-if="not partner.certificates_lines">
                <p>There are currently no Certifications for this boat.</p>
            </t>
            <div t-if="partner.certificates_lines">
                <t t-if="partner.certificates_lines" t-call="portal.portal_table">
                    <thead class="thead-light">
                        <tr class="active">
                            <th>Certificate Date</th>
                            <th>Type</th>
                            <th>Raiting</th>
                            <th>Loa</th>
                            <th>Invoice</th>
                            <th>PDF</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="partner.certificates_lines" t-as="certificate">
                            <tr>
                                <td><span t-field="certificate.date"/></td>
                                <td><span t-esc="certificate.certificate_type" class="text-uppercase" /></td>
                                <td><span t-esc="certificate.raiting"/></td>
                                <td><span t-esc="certificate.loa"/></td>
                                <td><span t-esc="certificate.invoice_id.number"/></td>
                                <td><a t-if="certificate.pdf" t-att-href="('/my/home/certificates/%s/pdf' % certificate.id) " target="_blank">Download</a></td>
                            </tr>
                        </t>
                    </tbody>
                </t>
            </div>
        </xpath>
    </template>

    <template id="website_sale_boat_information" inherit_id="website_sale.checkout">
        <xpath expr="//t[@t-if='not only_services']" position="after">
            <br/>
            <div class="o_page_header mt8">

                <!-- SELECT A BOAT -->
                <h3 class="mb2">Select a Boat</h3>
                <div>
<!--                    <ul>-->
                    <div class="col-sm-8">
                        <form action="/shop/confirm_order" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <select name="boat_id" id="boat_id_field" class="form-control" required="">
                            <option t-att-value="0" selected="selected"><span>Select a Boat</span></option>
                            <t t-foreach="order.partner_id.owned_boat_ids" t-as="boat">
                                <option t-att-value="boat.id"><span t-field="boat.name"/></option>
                            </t>
                        </select>

                        <!-- ADD A NEW BOAT -->
                        <h4 class="mb2 mt24">or Add a new Boat</h4>
                        <div class="form-group">
                            <label for="name" class="control-label col-sm-2">
                                Name
                            </label>
                            <div>
                                <input type="text" name="name" class="form-control" id="name_field" required="" pattern="^[A-Za-z -]+$" maxlength="120"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="estaleiro" class="control-label col-sm-2">
                                Estaleiro
                            </label>
                            <div>
                                <input type="text" name="estaleiro" class="form-control" id="estaleiro_field" required="" pattern="^[A-Za-z -]+$" maxlength="120"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="modelo" class="control-label col-sm-2">
                                Modelo
                            </label>
                            <div>
                                <input type="text" name="modelo" class="form-control" id="modelo_field" required="" pattern="^[A-Za-z -]+$" maxlength="120"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="loa" class="control-label col-sm-2">
                                Loa
                            </label>
                            <div>
                                <input type="text" name="loa" class="form-control" id="loa_field" required="" pattern="[0-9]+(\.[0-9]{0,2})?" maxlength="20"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="deslocamento" class="control-label col-sm-2">
                                Deslocamento
                            </label>
                            <div>
                                <input type="text" name="deslocamento" class="form-control" id="deslocamento_field" pattern="\d*" required="" maxlength="15"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="numeral" class="control-label col-sm-2">
                                Numeral
                            </label>
                            <div>
                                <input type="text" name="numeral" class="form-control" id="numeral_field" required="" pattern="^[A-Za-z -]+$" maxlength="120"/>
                            </div>
                        </div>
